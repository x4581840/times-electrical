<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.timeselectrical.mapper.LoadingConfigurationMapperExt" >
    <select id="getLoadingConfigurations" resultMap="com.timeselectrical.mapper.LoadingConfigurationMapper.BaseResultMap">
        SELECT
          <include refid="com.timeselectrical.mapper.LoadingConfigurationMapper.Base_Column_List"></include>
        FROM
          loading_configuration
        <where>
            1 = 1
            <if test="cond != null and cond.sqn != null and cond.sqn != ''">
                AND sqn = #{cond.sqn}
            </if>
            <if test="cond != null and cond.locLike != null and cond.locLike != ''">
                AND loc like LIKE CONCAT('%', #{con.locLike}, '%')
            </if>
            <if test="cond != null and cond.locList != null and cond.locList.size() != 0">
                AND loc IN
                <foreach collection="cond.locList" item="loc" open="(" close=")" separator=",">
                    #{loc}
                </foreach>
            </if>
        </where>

    </select>

    <select id="getLocByCond" resultType="java.lang.String">
        SELECT
          loc
        FROM
          loading_configuration
        <where>
            1 = 1
            <if test="cond != null and cond.sqn != null and cond.sqn != ''">
                AND sqn = #{cond.sqn}
            </if>
            <if test="cond != null and cond.locLike != null and cond.locLike != ''">
                AND loc LIKE CONCAT('%', #{cond.locLike}, '%')
            </if>
        </where>

    </select>
</mapper>